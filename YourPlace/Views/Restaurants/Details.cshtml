@model YourPlace.Models.Restaurant
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Restaurant type: @Model.RestaurantType</li>
    <li>Localisation: @Model.Localisation</li>
</ul>
@Html.ActionLink("Edit", "Edit", "Restaurants", new { id = Model.Id }, null)
@using (Html.BeginForm("Delete", "Restaurants", new { id = Model.Id }))
{
    <button type="submit">Delete</button>
}

